@page "/MovieDetails/{Id}"

@inherits MovieDetailsBase


<style>
    .add-cart {
        border: none;
        outline: 0;
        padding: 12px;
        color: white;
        background: rgba(25,50,70,0.81);
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
        margin-bottom: 10px;
    }

        .add-cart:hover {
            opacity: 0.7;
        }

    .go-home {
        border: none;
        outline: 0;
        padding: 12px;
        color: white;
        background: linear-gradient(to right, #021B79, #0575E6);
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
    }

        .go-home:hover {
            opacity: 0.7;
        }



    .card {
        width: 120% vw;
        height: 100%;
        
    }

   


</style>

@if (_movie == null && ErrorMessage == null)
{
    <h3>Loading products.....</h3>
}

else
{
    <div class="card">
        <div class="card-photo">
            <div class="span-img">
                <img src="@_movie.ImageUrl" alt="" class="image">
            </div>
        </div>
        <div class="card-title">
            <span class="span-title"><p>@_movie.Title</p></span>
        </div>
        <div class="card-genre">
            <div class="genre-title"><p class="genre">Genre:</p></div>
            <div class="genre-value">@_movie.Genre</div>
        </div>
        <div class="card-year">
            <div class="year-title"><p class="year">Year:</p></div>
            <div class="year-value">@_movie.Year</div>
        </div>
        <div class="card-rate">
            <div class="rate-title"><p class="rate">Rate:</p></div>
            <div class="rate-value">@_movie.Rate</div>
        </div>

        <div class="card-summary">
            <div class="summary-title"><p class="summary">Desctiption:</p></div>
            <div class="summary-value">@_movie.Summary</div>
        </div>
        <div>
            <a href="/ShoppingCart">
                <button class="add-cart">Add To Cart</button>
            </a>
        </div>
        <div>
            <a href="/">
                <button class="go-home">Go Home</button>
            </a>
        </div>
    </div>



}