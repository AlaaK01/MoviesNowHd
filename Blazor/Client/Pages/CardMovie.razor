@inherits   CardMovieBase





<style>
    .Movie {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 350px;
        margin: auto;
        text-align: center;
        font-family: arial;
    }

    .price {
        color: grey;
        font-size: 22px;
    }

    .Movie button {
        border: none;
        outline: 0;
        padding: 12px;
        color: white;
        background: rgba(25,50,70,0.81);
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
    }

    .Movie button:hover {
            opacity: 0.7;
        }

   

</style>


@foreach (var movie in movies)
{


    <div class="Movie">
        <img src="@movie.ImageUrl" alt="" style="width:100%">
        <h1>@movie.Title</h1>
        <p class="price">@movie.Price $</p>
        <p>@movie.Genre</p>
        <a href="/MovieDetails/@movie.Id">
            <p><button>See All Details</button></p>
        </a>
    </div>


}